<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_advance_form_view" model="ir.ui.view">
            <field name="name">account.advance.form</field>
            <field name="model">account.advance</field>
            <field name="arch" type="xml">
                <form string="Advance Request">
                    <header>
                        <button name="open" string="Confirm" class="oe_highlight"
                                invisible="state != 'draft'" type="object"
                                groups="account.group_account_user"/>
                        <button name="cancel" string="Cancel"
                                invisible="state != 'draft'" type="object"
                                groups="account.group_account_user"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,submit,cancel"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Clear"
                                invisible="remain != 0 or state != 'submit'"/>
                        <widget name="web_ribbon" title="Wait Clear"
                                bg_color="text-bg-info"
                                invisible="remain == 0 or state != 'submit'"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="employee_id"
                                       readonly="state != 'draft'"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="department_id"
                                       readonly="state != 'draft'"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="payee_ids" widget="many2many_tags"
                                       readonly="state != 'draft'"
                                       options="{'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="advance_date" readonly="state != 'draft'"/>
                                <field name="due_date" readonly="state != 'draft'"/>
                                <field name="due_date_clear" readonly="state != 'draft'"/>
                                <field name="advance_request_id"
                                       domain="[('employee_id', '=', employee_id),('state','=','approve')]"
                                       readonly="state != 'draft'"/>
                                <field name="description" readonly="state != 'draft'"/>
                                <field name="move_id" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Payment">
                                <field name="journal_id"
                                       readonly="state != 'draft'"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="account_id"
                                       readonly="state != 'draft'"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="payment_type" invisible="True"/>
                                <field name="payment_method_id"
                                       invisible="is_payment_multi == True"
                                       readonly="state == 'posted'"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="cheque_id"
                                       invisible="payment_type != 'cheque'"
                                       required="payment_type == 'cheque'"
                                       context="{'default_payment_method_id': payment_method_id, 'default_journal_id': journal_id, 'default_cheque_type': 'outbound'}"/>
                                <field name="is_payment_multi" readonly="state == 'posted'"/>
                                <field name="total"/>
                                <field name="remain"/>
                                <field name="clear"/>
                                <field name="payment_total"/>
                            </group>
                        </group>
                        <group col="6" class="mt-2 mt-md-0" string="Payment Multi"
                               invisible="is_payment_multi != True">
                            <field name="payment_ids"
                                   invisible="is_payment_multi != True"
                                   readonly="state == 'posted'">
                                <tree editable="bottom" string="Payment" create="1" delete="1">
                                    <field name="company_id" column_invisible="1"/>
                                    <field name="payment_method_id"
                                           domain="[('is_active','=',True),'|',('company_id', '=', False),('company_id', '=', parent.company_id)]"
                                           options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                    <field name="bank_account_id"
                                           column_invisible="type not in ['cheque','bank']"
                                           required="type == 'cheque'"/>
                                    <field name="ref"/>
                                    <field name="total" sum="Total Amount"/>
                                    <field name="type" column_invisible="1"/>
                                    <field name="cheque_id"
                                           domain="[('state','in',['draft','assigned'])]"
                                           column_invisible="type != 'cheque'"
                                           required="type == 'cheque'"
                                           context="{'default_payment_method_id': payment_method_id, 'default_cheque_type': 'out_bound'}"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Clear Advance">
                            <field name="clear_ids" readonly="True" force_save="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="doc_date"/>
                                    <field name="exclude_amount"/>
                                    <field name="amount_clearing"/>
                                    <field name="clear_amount"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'post'"
                                           decoration-info="state == 'draft'"
                                           decoration-danger="state == 'cancel'"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="account_advance_rule_branch_conditional" model="ir.rule">
            <field name="name">Account Advance - HQ sees all / Branch sees own</field>
            <field name="model_id" ref="model_account_advance"/>
            <field name="domain_force">
                ['|', ('branch_id', '=', False), ('branch_id', 'in', user.branch_ids.ids)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="account_advance_tree" model="ir.ui.view">
            <field name="name">account.advance.tree</field>
            <field name="model">account.advance</field>
            <field name="arch" type="xml">
                <tree string="Advance Request">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="due_date"/>
                    <field name="payment_method_id"/>
                    <field name="total"/>
                    <field name="state"/>
                    <field name="state_remain"/>
                </tree>
            </field>
        </record>

        <record id="action_account_advance" model="ir.actions.act_window">
            <field name="name">Account Advance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.advance</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first account advance
                </p>
            </field>
        </record>

        <menuitem id="account_advance_menu" name="Account Advance"
                  parent="account_advance_root"
                  action="action_account_advance" sequence="10"/>
    </data>
</odoo>
