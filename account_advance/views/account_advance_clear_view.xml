<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_advance_clear_form_view" model="ir.ui.view">
            <field name="name">account.advance.clear.form</field>
            <field name="model">account.advance.clear</field>
            <field name="arch" type="xml">
                <form string="Advance Clear">
                    <header>
                        <button name="submit" string="Confirm" class="oe_highlight" 
                                invisible="state != 'draft'" type="object"/>
                        <field name="avance_cl_approve_show" invisible="1"/>
                        <button name="confirm" string="Post" class="oe_highlight" 
                                invisible="state != 'confirm'" type="object" 
                                groups="account.group_account_manager"/>
                        <button name="action_cancel_draft" string="Cancel" 
                                invisible="state != 'draft'" type="object" 
                                groups="account.group_account_manager"/>
                        <button name="cancel_advance" string="Cancel" 
                                invisible="state != 'post'" type="object" 
                                groups="account.group_account_manager"/>
                        <button name="set_draft" string="Reset To Draft" 
                                invisible="state != 'confirm'" type="object"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,confirm,post,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="employee_id" readonly="state != 'draft'"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="advance_id" readonly="state != 'draft'"
                                       options="{'no_quick_create':True,'no_create_edit':True}"/>
                                <field name="journal_id" readonly="state != 'draft'"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="account_id" readonly="state != 'draft'"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="move_id" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="doc_date" readonly="state != 'draft'"/>
                                <field name="description" readonly="state != 'draft'"/>
                                <field name="company_id" readonly="state != 'draft'" 
                                       options="{'no_create': True}"/>
                                <field name="currency_id" readonly="state != 'draft'"/>
                                <field name="is_partial" readonly="state != 'draft'"/>
                                <field name="payment_method_id" readonly="state != 'draft'"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="advance_amount" invisible="not is_partial" force_save="1"/>
                                <field name="payment_type" invisible="True"/>
                                <field name="cheque_id" invisible="payment_type != 'cheque'"
                                       required="payment_type == 'cheque'"
                                       context="{'default_payment_method_id': payment_method_id, 'default_journal_id': journal_id, 'default_cheque_type': 'inbound'}"/>
                                <field name="amount_clearing" invisible="not is_partial" 
                                       readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="clear_ids" readonly="state != 'draft'">
                                    <tree editable="bottom">
                                        <field name="product_id"
                                               options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                        <field name="name"/>
                                        <field name="account_id" groups="account.group_account_user"
                                               options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                        <field name="analytic_distribution" widget="analytic_distribution"
                                               groups="analytic.group_analytic_accounting"
                                               options="{'product_field': 'product_id', 'account_field': 'account_id'}"/>
                                        <field name="invoice_number"/>
                                        <field name="invoice_date"/>
                                        <field name="partner_id" groups="account.group_account_user"
                                               options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="tax_ids" widget="many2many_tags"
                                               domain="[('type_tax_use','=','purchase')]"/>
                                        <field name="price_subtotal"/>
                                        <field name="currency_id" column_invisible="1"/>
                                        <field name="company_id" column_invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Tax">
                                <field name="tax_line">
                                    <tree string="Tax" editable="bottom">
                                        <field name="tax_invoice_number"/>
                                        <field name="tax_invoice_date"/>
                                        <field name="partner_id"/>
                                        <field name="tax_base_amount"/>
                                        <field name="balance"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Withholding Tax">
                                <field name="wt_cert_ids" readonly="state != 'draft'">
                                    <tree string="WHT Line">
                                        <field name="income_tax_form"/>
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="supplier_partner_id"/>
                                        <field name="state"/>
                                        <field name="base_amount"/>
                                        <field name="tax_amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <group>
                                <field name="note" readonly="state != 'draft'"/>
                            </group>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="untaxed_amount"/>
                                <field name="tax_amount"/>
                                <field name="wht_amount"/>
                                <field name="amount" invisible="1"/>
                                <field name="exclude_amount"/>
                                <field name="advance_amount" force_save="1"/>
                                <field name="clear_amount"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="account_advance_clear_rule_branch" model="ir.rule">
            <field name="name">Advance Clear: HQ sees all / Branch sees own</field>
            <field name="model_id" ref="model_account_advance_clear"/>
            <field name="domain_force">
                ['|', ('branch_id', '=', False),('branch_id', 'in', user.branch_ids.ids)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>

        <record id="account_advance_clear_tree" model="ir.ui.view">
            <field name="name">account.advance.clear.tree</field>
            <field name="model">account.advance.clear</field>
            <field name="arch" type="xml">
                <tree string="Advance Clear">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="advance_id"/>
                    <field name="doc_date"/>
                    <field name="advance_amount"/>
                    <field name="description"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
