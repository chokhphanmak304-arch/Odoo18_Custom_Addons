<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action -->
        <record id="action_transport_order" model="ir.actions.act_window">
            <field name="name">ข้อมูลขนส่ง</field>
            <field name="res_model">transport.order</field>
            <field name="view_mode">list,form</field>
            <field name="context">{
                'search_default_this_month': 1,
                'search_default_sale': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ยินดีต้อนรับสู่ระบบขนส่ง
                </p>
                <p>
                    คลิกปุ่ม "ซิงค์จาก Odoo 14" เพื่อดึงข้อมูลจาก Odoo 14
                </p>
            </field>
        </record>

        <!-- Main Menu -->
        <menuitem id="menu_transport_root"
                  name="ขนส่ง"
                  sequence="5"
                  web_icon="transport_sync,static/description/icon.png"/>

        <!-- Sub Menu -->
        <menuitem id="menu_transport_orders"
                  name="ข้อมูลขนส่ง"
                  parent="menu_transport_root"
                  action="action_transport_order"
                  sequence="10"/>
    </data>
</odoo>