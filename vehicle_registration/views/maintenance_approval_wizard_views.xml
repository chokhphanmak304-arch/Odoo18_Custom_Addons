<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== Maintenance Approval Wizard ==================== -->
    
    <!-- Wizard: ส่งอนุมัติ -->
    <record id="view_maintenance_approval_wizard_form" model="ir.ui.view">
        <field name="name">maintenance.approval.wizard.form</field>
        <field name="model">maintenance.approval.wizard</field>
        <field name="arch" type="xml">
            <form string="ส่งอนุมัติการแจ้งซ่อม">
                <group>
                    <group string="ข้อมูลการแจ้งซ่อม">
                        <field name="maintenance_request_id" invisible="1"/>
                        <field name="vehicle_id" readonly="1"/>
                        <field name="license_plate" readonly="1"/>
                        <field name="problem_category" readonly="1"/>
                    </group>
                    <group>
                        <field name="problem_description" readonly="1" colspan="2"/>
                    </group>
                </group>
                
                <separator string="เลือกผู้อนุมัติ (สูงสุด 2 คน)"/>
                <group>
                    <field name="approver_ids" widget="many2many_tags" 
                        options="{'no_create': True, 'no_open': True}"
                        placeholder="เลือกผู้อนุมัติได้ไม่เกิน 2 คน"/>
                </group>
                
                <separator string="เหตุผลในการส่งอนุมัติ"/>
                <group>
                    <field name="approval_reason" nolabel="1" 
                        placeholder="ระบุเหตุผลที่ต้องการส่งอนุมัติการแจ้งซ่อม..."/>
                </group>
                
                <footer>
                    <button name="action_send_approval" string="ส่งอนุมัติ" 
                        type="object" class="oe_highlight"/>
                    <button string="ยกเลิก" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard: ให้แก้ไข -->
    <record id="view_maintenance_approval_reject_wizard_form" model="ir.ui.view">
        <field name="name">maintenance.approval.reject.wizard.form</field>
        <field name="model">maintenance.approval.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="ให้แก้ไขการแจ้งซ่อม">
                <group>
                    <group string="ข้อมูลการแจ้งซ่อม">
                        <field name="approval_id" invisible="1"/>
                        <field name="maintenance_request_id" invisible="1"/>
                        <field name="vehicle_id" readonly="1"/>
                        <field name="license_plate" readonly="1"/>
                        <field name="problem_category" readonly="1"/>
                    </group>
                    <group>
                        <field name="problem_description" readonly="1" colspan="2"/>
                    </group>
                </group>
                
                <separator string="เหตุผลในการให้แก้ไข"/>
                <group>
                    <field name="rejection_reason" nolabel="1" 
                        placeholder="ระบุเหตุผลที่ต้องการให้แก้ไขการแจ้งซ่อม... (บังคับ)"/>
                </group>
                
                <separator string="หมายเหตุเพิ่มเติม (ไม่บังคับ)"/>
                <group>
                    <field name="approval_note" nolabel="1" 
                        placeholder="หมายเหตุเพิ่มเติมจากผู้อนุมัติ..."/>
                </group>
                
                <footer>
                    <button name="action_reject" string="ยืนยันให้แก้ไข" 
                        type="object" class="btn-danger"/>
                    <button string="ยกเลิก" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
