<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== Maintenance Approval Views ==================== -->
    
    <!-- List View -->
    <record id="view_maintenance_approval_list" model="ir.ui.view">
        <field name="name">maintenance.approval.list</field>
        <field name="model">maintenance.approval</field>
        <field name="arch" type="xml">
            <list string="การอนุมัติ" create="false" edit="false">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="maintenance_request_id"/>
                <field name="vehicle_id"/>
                <field name="license_plate"/>
                <field name="problem_category"/>
                <field name="approver_id"/>
                <field name="state" 
                    decoration-warning="state=='pending'"
                    decoration-success="state=='approved'"
                    decoration-danger="state=='rejected'"/>
                <field name="approval_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_maintenance_approval_form" model="ir.ui.view">
        <field name="name">maintenance.approval.form</field>
        <field name="model">maintenance.approval</field>
        <field name="arch" type="xml">
            <form string="การอนุมัติ" create="false">
                <header>
                    <button name="action_approve" string="✅ อนุมัติ" 
                        type="object" class="oe_highlight"
                        invisible="state != 'pending'"/>
                    <button name="action_reject" string="❌ ให้แก้ไข" 
                        type="object" class="btn-danger"
                        invisible="state != 'pending'"/>
                    <field name="state" widget="statusbar" 
                        statusbar_visible="pending,approved,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                        <h2>
                            <field name="vehicle_id" readonly="1"/>
                            (<field name="license_plate" readonly="1"/>)
                        </h2>
                    </div>
                    
                    <group>
                        <group string="ข้อมูลการแจ้งซ่อม">
                            <field name="maintenance_request_id" readonly="1"/>
                            <field name="problem_category" readonly="1"/>
                            <field name="problem_description" readonly="1"/>
                        </group>
                        <group string="ผู้อนุมัติ">
                            <field name="sequence"/>
                            <field name="approver_id" readonly="1"/>
                            <field name="approval_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="เหตุผลและหมายเหตุ">
                        <field name="approval_reason" readonly="1" 
                            placeholder="เหตุผลที่ผู้แจ้งซ่อมระบุ"/>
                        <field name="approval_note" readonly="state != 'pending'" 
                            placeholder="หมายเหตุจากผู้อนุมัติ (ไม่บังคับ)"/>
                        <field name="rejection_reason" readonly="1"
                            invisible="state != 'rejected'"
                            placeholder="เหตุผลในการให้แก้ไข"/>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_maintenance_approval" model="ir.actions.act_window">
        <field name="name">การอนุมัติการแจ้งซ่อม</field>
        <field name="res_model">maintenance.approval</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('approver_id', '=', uid)]</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ไม่มีรายการอนุมัติ
            </p>
            <p>
                รายการที่รออนุมัติจากคุณจะแสดงที่นี่
            </p>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_maintenance_approval_search" model="ir.ui.view">
        <field name="name">maintenance.approval.search</field>
        <field name="model">maintenance.approval</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="maintenance_request_id"/>
                <field name="vehicle_id"/>
                <field name="license_plate"/>
                <field name="approver_id"/>
                
                <filter name="pending" string="รออนุมัติ" 
                    domain="[('state', '=', 'pending')]"/>
                <filter name="approved" string="อนุมัติแล้ว" 
                    domain="[('state', '=', 'approved')]"/>
                <filter name="rejected" string="ให้แก้ไข" 
                    domain="[('state', '=', 'rejected')]"/>
                
                <separator/>
                <filter name="my_approvals" string="รอการอนุมัติของฉัน" 
                    domain="[('approver_id', '=', uid), ('state', '=', 'pending')]"/>
                
                <group expand="0" string="จัดกลุ่มตาม">
                    <filter name="group_by_state" string="สถานะ" 
                        context="{'group_by': 'state'}"/>
                    <filter name="group_by_approver" string="ผู้อนุมัติ" 
                        context="{'group_by': 'approver_id'}"/>
                    <filter name="group_by_vehicle" string="รถ" 
                        context="{'group_by': 'vehicle_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Menu Item -->
