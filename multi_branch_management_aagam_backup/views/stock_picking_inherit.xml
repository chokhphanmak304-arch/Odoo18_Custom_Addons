<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_picking_form_branch_inherit" model="ir.ui.view">
            <field name="name">stock.picking.inherite</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field string="Branch Name" name="branch_id" />
                </xpath>
                 <xpath expr="//field[@name='location_id'][2]" position="attributes">
                     <attribute name="context">{
                        'branch_axis': branch_id,
                        }</attribute>
                </xpath>
                 <xpath expr="//field[@name='location_dest_id'][2]" position="attributes">
                     <attribute name="context">{
                        'branch_axis': branch_id,
                        }</attribute>
                </xpath>
            </field>
        </record>

        <record id="vpicktree_branch_inherit" model="ir.ui.view">
            <field name="name">stock.picking.tree.inherite</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="before">
                    <field string="Branch Name" name="branch_id"/>
                </xpath>
            </field>
        </record>



    </data>
</odoo>
